{
    "name": "hyperf/hyperf-skeleton",
    "type": "project",
    "keywords": [
        "php",
        "swoole",
        "framework",
        "hyperf",
        "microservice",
        "middleware"
    ],
    "description": "A coroutine framework that focuses on hyperspeed and flexible, specifically use for build microservices and middlewares.",
    "license": "Apache-2.0",
    "require": {
        "php": ">=7.3",
        "ext-swoole": ">=4.4",
        "hyperf/cache": "2.2.*",
        "hyperf/command": "2.2.*",
        "hyperf/config": "2.2.*",
        "hyperf/contract": "2.2.*",
        "hyperf/database": "2.2.*",
        "hyperf/db-connection": "2.2.*",
        "hyperf/devtool": "2.2.*",
        "hyperf/di": "2.2.*",
        "hyperf/dispatcher": "2.2.*",
        "hyperf/event": "2.2.*",
        "hyperf/exception-handler": "2.2.*",
        "hyperf/framework": "2.2.*",
        "hyperf/guzzle": "2.2.*",
        "hyperf/http-server": "2.2.*",
        "hyperf/logger": "2.2.*",
        "hyperf/memory": "2.2.*",
        "hyperf/paginator": "2.2.*",
        "hyperf/pool": "2.2.*",
        "hyperf/process": "2.2.*",
        "hyperf/redis": "^2.0.0",
        "hyperf/utils": "2.2.*",
        "hyperf/constants": "2.2.*",
        "hyperf/async-queue": "2.2.*",
        "hyperf/validation": "2.2.*",
        "firstphp/wsdebug": "^1.1",
        "hyperf/websocket-server": "^2.0.0",
        "firebase/php-jwt": "^5.0",
        "ext-bcmath": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "swoole/ide-helper": "dev-master",
        "friendsofphp/php-cs-fixer": "^2.14",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12",
        "hyperf/testing": "2.2.*"
    },
    "suggest": {
        "ext-openssl": "Required to use HTTPS.",
        "ext-json": "Required to use JSON.",
        "ext-pdo": "Required to use MySQL Client.",
        "ext-pdo_mysql": "Required to use MySQL Client.",
        "ext-redis": "Required to use Redis Client.",
        "ext-bcmath": "Required to use Bcmath."
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": ["app/Functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "./test/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": [],
    "scripts": {
        "pre-install-cmd": "Installer\\Script::install",
        "pre-update-cmd": "Installer\\Script::install",
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "rm -rf runtime/container"
        ],
        "test": "co-phpunit -c --prepend test/bootstrap.php -c phpunit.xml --colors=always",
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app ./config",
        "start": "php ./bin/hyperf.php start"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
